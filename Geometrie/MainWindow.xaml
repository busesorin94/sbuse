<Window x:Class="Geometrie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proiect Geometrie" Height="350" Width="525" MinWidth="100" MinHeight="100">
    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3*" Name="_drawColumn"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="2" x:Name="CanvasBorder" Grid.Column="1" BorderBrush="Black">
            <Canvas Name="_canvas" Grid.Column="1" HorizontalAlignment="Center" Height="auto" Margin="10" VerticalAlignment="Center" Width="Auto"/>
        </Border>
        <Button Content="Draw" Grid.Column="0" Name="btnDraw" Click="btnDraw_Click" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="109" Height="30"/>
        <Button Content="Draw Point" Name="btnPoint" Click="btnPoint_Click" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="109" Height="34"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="109" Height="37" Click="Button_Click"/>
        <Button Content="Despre" Name="btnAbout" Click="btnAbout_Click" HorizontalAlignment="Left" Margin="29.456,249.654,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
